    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rollup": "^4.29.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
