{
  "name": "@rubenpazch/lbyte-ui-library",
  "version": "1.0.20",
  "private": true,
  "description": "Monorepo for Lbyte UI component library",
  "repository": "https://github.com/rubenpazch/lbyte-ui-library.git",
  "author": "Ruben Paz Chuspe <rubenpazchuspe@outlook.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*",
    "tooling/*"
  ],
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "lint": "turbo lint",
    "format": "prettier . --write --ignore-path .prettierignore",
    "storybook": "turbo storybook",
    "build-storybook": "pnpm --filter @rubenpazch/storybook run build-storybook",
    "clean": "turbo clean && rm -rf node_modules",
    "release": "changeset publish",
    "generate-package": "node ./scripts/generate-package.js",
    "upgrade:deps": "pnpm -w up --latest",
    "upgrade:interactive": "pnpm -w up",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "pre-push": "pnpm test && pnpm build",
    "format:prettier": "prettier . --write --ignore-path .prettierignore",
    "chromatic": "npx chromatic --project-token=chpt_998c11915f82eae"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "type": "module",
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=8.0.0"
  },
  "peerDependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@changesets/cli": "^2.29.8",
    "@rubenpazch/eslint-config": "workspace:^",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "babel-jest": "^30.2.0",
    "chromatic": "^13.3.5",
    "eslint-plugin-storybook": "^10.1.11",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "lodash": "4.17.21",
    "ts-jest": "^29.4.6",
    "turbo": "^2.7.5",
    "typescript-eslint": "^8.53.1"
  },
  "dependencies": {
    "@rubenpazch/icons": "workspace:^"
  }
}
